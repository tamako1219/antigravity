{
    "manifest_version": 3,
    "name": "Keep Saver Pro",
    "version": "1.2",
    "description": "Save content to Google Keep with Markdown format, auto-tags, and export features.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "clipboardWrite",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_script.js"],
            "run_at": "document_idle"
        },
        {
            "matches": ["https://keep.google.com/*"],
            "js": ["keep_script.js"],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}